@model KenticoKontentBlog.Feature.About.AboutViewModel

@{
    ViewData["Title"] = Model.Title;
}

@if (Model.HasHeroImage)
{
    <div class="hero-image" style="background-image: url(@Model.HeroImage);">
        <div class="hero-text">
            <h1>@Model.Title</h1>
        </div>
    </div>
}

@if (!Model.HasHeroImage)
{
    <h1>@Model.Title</h1>
}
@Html.Raw(Model.Content)
