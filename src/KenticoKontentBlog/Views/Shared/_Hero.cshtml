@using KenticoKontentBlog.Feature.Framework
@model KenticoKontentBlog.Feature.Framework.HeroModel

@functions 
{

    string GetHorizontalClass(ImageHorizontalAlignment alignment)
    {
        switch (alignment)
        {
            case ImageHorizontalAlignment.Left:
                return "masthead-left";
            case ImageHorizontalAlignment.Right:
                return "masthead-right";
            default:
                return null;
        }
    }

    string GetVerticalClass(ImageVerticalAlignment alignment)
    {
        switch (alignment)
        {
            case ImageVerticalAlignment.Top:
                return "masthead-top";
            case ImageVerticalAlignment.Bottom:
                return "masthead-bottom";
            default:
                return null;
        }
    }
}

<header class="masthead @GetHorizontalClass(Model.HorizontalAlignment) @GetVerticalClass(Model.VerticalAlignment)" style="background-image: url('@Model.Image')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>@Model.Title</h1>
                    @if (Model.PublishedDate.HasValue)
                    {
                        <span class="subheading">@($"Published: {Model.PublishedDate.Value:D}")</span>
                    }
                </div>
            </div>
        </div>
    </div>
</header>