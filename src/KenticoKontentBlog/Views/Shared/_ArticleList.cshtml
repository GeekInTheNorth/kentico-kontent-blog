@model KenticoKontentBlog.Feature.ArticleList.ArticlePreviewCollection

<div class="container">
    @if (!string.IsNullOrWhiteSpace(Model.Title))
    {
        <h2 class="text-center">@Model.Title</h2>
    }
    <div class="row">
        @foreach (var article in Model.Articles)
        {
            <div class="col-sm-4">
                <div class="card mx-1 my-1">
                    <div class="card-header-image" style="background-image: url('@article.Image?w=400');">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-controller="Article" asp-action="Index" asp-route-articleStub="@article.CodeName">@article.Title</a>
                        </h5>
                        <p class="card-text">@article.Description</p>
                        @if (!string.IsNullOrWhiteSpace(article.AuthorName))
                        {
                            <p class="card-text"><small class="text-muted">Posted by <a href="@article.AuthorUrl">@article.AuthorName</a> on @article.PublishedDate.ToString("D")</small></p>
                        }
                        else
                        {
                            <p class="card-text"><small class="text-muted">Posted on @article.PublishedDate.ToString("D")</small></p>
                        }
                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="Article" asp-action="Index" asp-route-articleStub="@article.CodeName" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="clearfix text-center mt-4">
        <a class="btn btn-primary" asp-controller="Article" asp-action="List" asp-route-category="All">All Articles &rarr;</a>
    </div>
</div>