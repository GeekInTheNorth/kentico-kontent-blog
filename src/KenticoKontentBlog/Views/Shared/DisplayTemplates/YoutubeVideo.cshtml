@model KenticoKontentBlog.Feature.Kontent.Models.YoutubeVideo

@{ 
    var options = Model.AutoPlay ? "accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" : "accelerometer; encrypted-media; gyroscope; picture-in-picture";
    var fullScreen = Model.AllowFullscreen ? "allowfullscreen" : string.Empty;
}

<div class="youtube-container">
    <iframe src="https://www.youtube-nocookie.com/embed/@Model.VideoId" frameborder="0" allow="@options" @fullScreen></iframe>
</div>