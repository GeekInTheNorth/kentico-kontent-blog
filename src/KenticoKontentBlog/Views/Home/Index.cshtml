@model KenticoKontentBlog.Feature.Home.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

@if (Model.HasHeroImage)
{
    <div class="hero-image" style="background-image: url(@Model.HeroImage);">
        <div class="hero-text">
            <h1>@Model.Title</h1>
        </div>
    </div>
}

@if (!Model.HasHeroImage)
{
    <h1>@Model.Title</h1>
}

@Html.DisplayFor(x => x.IntroText)

<partial name="_ArticleList" model="Model.Articles" />
