@model KenticoKontentBlog.Kentico.Models.BlogArticle

@{
    ViewData["Title"] = Model.Title;
    var hasHeroImage = Model.HeaderImage != null && Model.HeaderImage.Any();
    var heroImage = Model.HeaderImage?.Select(x => x.Url).FirstOrDefault();
}

@if (hasHeroImage)
{
    <div class="hero-image" style="background-image: url(@heroImage);">
        <div class="hero-text">
            <h1>@Model.Title</h1>
            <p>@($"Published: {Model.PublishedDate:D}")</p>
        </div>
    </div>
}

@if (!hasHeroImage)
{
    <h1>@Model.Title</h1>
    @if (Model.PublishedDate.HasValue)
    {
        <p class="text-muted small">@($"Published: {Model.PublishedDate:D}")</p>
    }
    @if (Model.Categories != null || Model.Categories.Any())
    {
        @foreach (var category in Model.Categories)
        {
            @*<a href="#" class="btn-dark btn-secondary">@category.Name</a>*@
        }
    }
}
@Html.Raw(Model.ArticleContent)
